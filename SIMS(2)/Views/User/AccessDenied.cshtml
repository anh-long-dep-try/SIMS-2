@{
    ViewData["Title"] = "Access Denied - SIMS";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #7209b7;
            --accent: #4cc9f0;
            --text: #2b2d42;
            --light: #f8f9fa;
            --background: linear-gradient(135deg, #e4e8f0 0%, #f5f7fa 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--background);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            overflow-x: hidden;
            color: var(--text);
            position: relative;
        }

        .container {
            text-align: center;
            padding: 2rem;
            position: relative;
            z-index: 1;
            max-width: 400px;
            width: 100%;
        }

        .header {
            margin-bottom: 2rem;
        }

            .header h1 {
                font-size: 2.5rem;
                font-weight: 700;
                background: linear-gradient(45deg, var(--primary), var(--secondary));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                text-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
                transform: translateZ(20px);
                animation: float 3s ease-in-out infinite;
            }

            .header p {
                font-size: 1rem;
                color: #6c757d;
                margin: 1rem 0;
                line-height: 1.6;
            }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .btn {
            display: inline-block;
            padding: 0.75rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            color: white;
            background: linear-gradient(45deg, var(--primary), var(--accent));
            border-radius: 50px;
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
            transition: all 0.3s ease;
            transform-style: preserve-3d;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                transform: translateY(-5px) rotateX(15deg) rotateY(15deg);
                box-shadow: 0 10px 25px rgba(67, 97, 238, 0.5);
                background: linear-gradient(45deg, var(--accent), var(--primary));
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) translateZ(20px);
            }

            50% {
                transform: translateY(-10px) translateZ(30px);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Access Denied</h1>
            <p>You do not have permission to access this page.</p>
        </div>
        <div class="buttons">
            <a asp-controller="User" asp-action="Login" class="btn">Back to Login</a>
        </div>
    </div>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
</body>
</html>